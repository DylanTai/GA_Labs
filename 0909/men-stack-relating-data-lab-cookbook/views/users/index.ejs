<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Edit Food</title>
  </head>
  <body>
    <%- include('../partials/navbar.ejs') %>
    <h1>Edit Item</h1>

    <form
      method="POST"
      action="/users/<%= owner._id %>/foods/<%= food._id %>?_method=PUT"
    >
      <label>Name</label>
      <input name="name" value="<%= food.name %>" required />
      <button type="submit">Update</button>
    </form>
  </body>
</html>
